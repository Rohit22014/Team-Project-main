<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Sessions Database</title>
    <link href="/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css"/>
    <link href="/assets/css/all.css" rel="stylesheet" type="text/css"/>  
</head>
<body>
  <div class="container"> 
    <h2><a class="breadcrumb-item text-dark" href="/Sessions">Sessions Database</a> <span class="badge badge-secondary" id="databaseFilterNotice"></span></h2>
	<h2><a class="breadcrumb-item text-dark" href="/">Back to Database Options</a> <span class="badge badge-secondary" id="databaseFilterNotice"></span></h2>

    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <label class="input-group-text" for="inputGroupSelect01"><i class="fa fa-search"></i></label>
            <select class="custom-select" id="fieldSearchSelect">
			  <!-- This creates the filter search option and indexes to give them values -->
                <option value="1" selected>Session Date</option>
                <option value="2">Session Time</option>
				<option value="3">Clients</option>
				<option value="4">Therapist</option>
				<option value="5">Fee</option>
				<option value="6">Session Number</option>
				<option value="7">Session Duration</option>
				<option value="8">Session Type</option>
				<option value="9">Issue Flag</option>
				<option value="10">Session Notes</option>
            </select>
        </div>
        <input class="form-control py-2 border-left-0 border" type="search" placeholder="Filter Title List ..." id="tableFilter"> 
		
    </div>
    <table class="table table-hover table-striped" id="sessionsList">
      <thead>
        <tr>  
		<!-- Table headers-->
          <th style="width: 25%">Session Date</th>
          <th style="width: 25%">Session Time</th>
		  <th style="width: 25%">Clients</th>
          <th style="width: 25%">Therapist</th>
		  <th style="width: 25%">Fee</th>
          <th style="width: 25%">Session Number</th>
		  <th style="width: 25%">Session Duration</th>
          <th style="width: 25%">Session Type</th>
		  <th style="width: 25%">Issue Flag</th>
          <th style="width: 25%">Session Notes</th>
          <th class="text-center" style="width: 15%">Options</th>
        </tr>
      </thead>
      <tbody>
	  <!-- Everytime we make an API call which sends results we render the view and the table with them results and on automatic root call -->
        {{#each results}}
        <tr >
          <td style="width: 25%">{{SessionDate}}</td>
          <td style="width: 25%">{{SessionTime}}</td>
		  <td style="width: 25%">{{Clients}}</td>
          <td style="width: 25%">{{Therapist}}</td>
		  <td style="width: 25%">{{Fee}}</td>
          <td style="width: 25%">{{SessionNumber}}</td>
		  <td style="width: 25%">{{SessionDuration}}</td>
		  <td style="width: 25%">{{SessionType}}</td>
          <td style="width: 25%">{{IssueFlag}}</td>
		  <td style="width: 25%">{{SessionNotes}}</td>
          <td class="text-right" style="width: 15%">
		  <!-- Store the results of the data and store them for later use -->
            <a href="javascript:void(0);" class="btn btn-sm btn-info update" data-id="{{ _id}}" data-date="{{ SessionDate }}" data-time="{{ SessionTime }}" data-clients="{{ Clients }}" data-therapist="{{ Therapist }}" data-fee="{{ Fee}}" data-num="{{ SessionNumber }}" data-duration="{{ SessionDuration}}" data-type="{{ SessionType}}" data-flag="{{ IssueFlag}}" data-notes="{{ SessionNotes}}">Update</a>
            <a href="javascript:void(0);" class="btn btn-sm btn-danger delete" data-id="{{ _id}}" data-date="{{ SessionDate }}" data-time="{{ SessionTime }}" data-clients="{{ Clients }}" data-therapist="{{ Therapist }}" data-fee="{{ Fee }}" data-num="{{ SessionNumber }}" data-duration="{{ SessionDuration}}" data-type="{{ SessionType}}" data-flag="{{ IssueFlag}}" data-notes="{{ SessionNotes}}">Delete</a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>

    <div class="input-group mb-3">
        <button class="btn btn-primary mr-5" data-toggle="modal" data-target="#addModal">Add</button>
        <div class="input-group-prepend">
             <select class="custom-select" id="databaseSearchSelect">
			 <!-- This sets up the database search options and their dedicated value -->
                <option value="SessionDate" selected>Session Date</option>
                <option value="SessionTime">Session Time</option>
				<option value="Clients">Clients</option>
				<option value="Therapist">Therapist</option>
				<option value="Fee">Fee</option>
				<option value="SessionNumber">SessionNumber</option>
				<option value="SessionDuration">SessionDuration</option>
                <option value="SessionType">SessionType</option>
				<option value="IssueFlag">IssueFlag</option>
				<option value="SessionNotes">SessionNotes</option>
            </select>
        </div>
        <input class="form-control py-2 border-left-0 border" type="search" placeholder="Find in Database ..." id="databaseSearchFilter"> 
        <div class="input-group-append">
            <button class="btn btn-success" type="button" id="databaseSearch">Find</button>
        </div>
    </div>

    <form id="addForm" action="/Sessions" method="POST">
        <div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
         <div class="modal-dialog" role="document">
           <div class="modal-content">
             <div class="modal-header">
               <h5 class="modal-title" id="exampleModalLabel">Add New Session</h5>
               <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                 <span aria-hidden="true">&times;</span>
               </button>
             </div>
             <div class="modal-body">
			 <!-- This creates appropriate fields in the Add functionality to create a session -->
               <div class="form-group">
                   <input type="text" name="SessionDate" class="form-control" placeholder="Session Date" required>
               </div>
               <div class="form-group">
                   <input type="text" name="SessionTime" class="form-control" placeholder="Session Time" required>
               </div>
			   <div class="form-group">
                   <input type="text" name="Clients" class="form-control" placeholder="Clients" required>
               </div>
			   <div class="form-group">
                   <input type="text" name="Therapist" class="form-control" placeholder="Therapist" required>
               </div>
			   <div class="form-group">
                   <input type="text" name="Fee" class="form-control" placeholder="Fee" required>
               </div>
			   <div class="form-group">
                   <input type="text" name="SessionNumber" class="form-control" placeholder="Session Number" required>
               </div>
			   <div class="form-group">
                   <input type="text" name="SessionDuration" class="form-control" placeholder="Session Duration" required>
               </div>
			   <div class="form-group">
                   <input type="text" name="SessionType" class="form-control" placeholder="Session Type" required>
               </div>
			   <div class="form-group">
                   <input type="text" name="IssueFlag" class="form-control" placeholder="Issue Flag" required>
               </div>
			   <div class="form-group">
                   <input type="text" name="SessionNotes" class="form-control" placeholder="Session Notes" required>
               </div>
             </div>
             <div class="modal-footer">
               <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
               <button type="submit" class="btn btn-primary">Save</button>
             </div>
           </div>
         </div>
        </div>
    </form>

    <form id="updateForm" action="/Sessions" method="PUT"> 
       <div class="modal fade" id="updateModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Update Session</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
			<!-- This creates appropriate fields in the update functionality to update a session -->
              <div class="form-group">
                   <input type="text" name="SessionDate" class="form-control" placeholder="Session Date" required>
               </div>
               <div class="form-group">
                   <input type="text" name="SessionTime" class="form-control" placeholder="Session Time" required>
               </div>
			   <div class="form-group">
                   <input type="text" name="Clients" class="form-control" placeholder="Clients" required>
               </div>
			   <div class="form-group">
                   <input type="text" name="Therapist" class="form-control" placeholder="Therapist" required>
               </div>
			   <div class="form-group">
                   <input type="text" name="Fee" class="form-control" placeholder="Fee" required>
               </div>
			   <div class="form-group">
                   <input type="text" name="SessionNumber" class="form-control" placeholder="Session Number" required>
               </div>
			   <div class="form-group">
                   <input type="text" name="SessionDuration" class="form-control" placeholder="Session Duration" required>
               </div>
			   <div class="form-group">
                   <input type="text" name="SessionType" class="form-control" placeholder="Session Type" required>
               </div>
			   <div class="form-group">
                   <input type="text" name="IssueFlag" class="form-control" placeholder="Issue Flag" required>
               </div>
			   <div class="form-group">
                   <input type="text" name="SessionNotes" class="form-control" placeholder="Session Notes" required>
               </div>
            </div>
            <div class="modal-footer">
              <input type="hidden" name="sessionId" class="id">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <button type="submit" class="btn btn-primary">Update</button>
            </div>
          </div>
        </div>
       </div>
    </form>

    <form id="deleteForm" action="/Sessions" method="DELETE"> 
        <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
               <div class="modal-content">
                   <div class="modal-header">
                        <h5 class="modal-title" id="myModalLabel">Delete Session</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                   </div>
                   <div class="modal-body">
                        <strong>Are you sure you want to delete this Session?</strong>
                   </div>
                   <div class="modal-footer">
                        <input type="hidden" name="sessionId" class="form-control id" required>
                        <button type="submit" class="btn btn-success">Delete</button>
                   </div>
                </div>
            </div>
        </div>
    </form>

	<!-- Successful and failed operation popups -->
    <div class="modal fade" id="successAlert" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="alert alert-success" role="alert">
                <strong>Oh Great!</strong> RESTful Operation was Successful!
            </div>
        </div>
    </div>

    <div class="modal fade" id="errorAlert" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="alert alert-danger" role="alert">
                <strong>Oh No!</strong> RESTful Operation was Unsuccessful!
            </div>
        </div>
    </div>
 </div>
 
<script src="/assets/js/jquery-3.5.0.min.js"></script>
<script src="/assets/js/bootstrap.bundle.min.js"></script>
<script>
    $(document).ready(function(){
       
        var addForm = $("#addForm");
        addForm.submit(function(e){
            e.preventDefault(); 
            $.ajax({
                type: addForm.attr('method'),
                url:  addForm.attr('action'),
                data: addForm.serialize(), 
                success: function (data) {
                    console.log('Update successful!');
                    $('#successAlert').modal('show');
                    var timer = setTimeout(function() {
                        $(location).attr('href', '/Sessions')
                    }, 3000);
                },
                error: function (data) {
                    console.log('An error occurred.');
                    $('#errorAlert').modal('show');
                    var timer = setTimeout(function() {
                        $(location).attr('href', '/Sessions')
                    }, 3000);
                },
            });
            $('#addModal').modal('hide');
        });
		//Update Functionality
		$('#sessionsList').on('click','.update',function(){
            var session_id = $(this).data('id');
            var session_date = $(this).data('date');
            var session_time = $(this).data('time');
			var session_clients = $(this).data('clients');
            var session_therapist = $(this).data('therapist');
			var session_fee = $(this).data('fee');
            var session_num = $(this).data('num');
			var session_duration=$(this).data('duration');
			var session_type = $(this).data('type');
			var session_flag= $(this).data('flag');
			var session_notes = $(this).data('notes');
            $('#updateModal').modal('show');
            $('.SessionDate').val(session_date);
            $('.SessionTime').val(session_time);
			$('.Clients').val(session_clients);
            $('.Therapist').val(session_therapist);
			$('.SessionNumber').val(session_num);
            $('.SessionDuration').val(session_duration);
			$('.SessionType').val(session_type);
			$('.Fee').val(session_fee);
			$('.IssueFlag').val(session_flag);
			$('.SessionNotes').val(session_notes);
            $('.id').val(session_id);
        });
       
        var updateForm = $("#updateForm");
        updateForm.submit(function(e){
            e.preventDefault(); 
            var id = updateForm.find('input[name="sessionId"]').val();    
            $.ajax({
                type: updateForm.attr('method'),
                url:  updateForm.attr('action')+"/"+id,
                data: updateForm.serialize(), 
                success: function (data) {
                    console.log('Update successful!');
                    $('#successAlert').modal('show');
                    var timer = setTimeout(function() {
                        $(location).attr('href', '/Sessions')
                    }, 3000);
                },
                error: function (data) {
                    console.log('An error occurred.');
                    $('#errorAlert').modal('show');
                    var timer = setTimeout(function() {
                        $(location).attr('href', '/Sessions')
                    }, 3000);
                },
            });
            $('#updateModal').modal('hide');
        });
		
		//Delete functionality
        $('#sessionsList').on('click','.delete',function(){
            var session_id = $(this).data('id');
            var session_number = $(this).data('num');
            $("#deleteModal .modal-body").html("<span class=\"font-weight-bold\">Are you sure you want to delete Session: </span><span class=\"font-italic\">"+session_id+"... ("+session_number+")</span><span class=\"font-weight-bold\">?</span>");
            $('#deleteModal').modal('show');
            $('.id').val(session_id);
        });
        
        var deleteForm = $("#deleteForm");
        deleteForm.submit(function(e){
            e.preventDefault();
            var id = deleteForm.find('input[name="sessionId"]').val();   
            $.ajax({
                type: deleteForm.attr('method'),
                url:  deleteForm.attr('action')+"/"+id,
                success: function (data) {
                    console.log('Deletion successful!');
                    $('#successAlert').modal('show');
                    var timer = setTimeout(function() {
                        $(location).attr('href', '/Sessions')
                    }, 3000);
                },
                error: function (data) {
                    console.log('An error occurred.');
                    $('#errorAlert').modal('show');
                    var timer = setTimeout(function() {
                        $(location).attr('href', '/Sessions')
                    }, 3000);
                },
            });
            $('#deleteModal').modal('hide');
        });
		
		//Depending on the pre set value of the options we show different views
        $("#fieldSearchSelect").on('change',function() {
            var k = $(this).val();
            if (k == 1) {
                $("#tableFilter").attr("placeholder", "Filter Session Date List ...");
            } 
			else if(k==2)
			{
                $("#tableFilter").attr("placeholder", "Filter Session Time List ...");
            }
			else if(k==3)
			{
				$("#tableFilter").attr("placeholder", "Filter Clients List ...");
			}
			else if(k==4)
			{
				$("#tableFilter").attr("placeholder", "Filter Therapist List ...");
			}
			else if(k==5)
			{
				$("#tableFilter").attr("placeholder", "Filter Fee List ...");
            }
			else if(k==6)
			{
				$("#tableFilter").attr("placeholder", "Filter Session Number List ...");
			}
			else if(k==7)
			{
				$("#tableFilter").attr("placeholder", "Filter Session Duration List ...");
			}
			else if(k==8)
			{
				$("#tableFilter").attr("placeholder", "Filter Session Type List ...");
			}
			else if(k==9)
			{
				$("#tableFilter").attr("placeholder", "Filter Issue Flag List ...");
			}
			else
			{
				$("#tableFilter").attr("placeholder", "Filter Session Notes List ...");
			}
            $("#tableFilter").keyup();
        });

		//This controls the table data cell which we test
        $("#tableFilter").keyup(function(){
            var filter = $(this).val().toUpperCase(); 
            $("#sessionsList").find('tr').each(function(rows) {
                if (rows !==  0) {
                    var row = $(this);
                    var searching = "";
                    if ($("#fieldSearchSelect").val() == 1) {
                        searching = row.find("td:first").text().toUpperCase();
                    }  
					else if($("#fieldSearchSelect").val() == 2)
					{
                        searching = row.find("td:first + td").text().toUpperCase();
                    }
					else if($("#fieldSearchSelect").val() == 3)
					{
						searching = row.find("td:first + td + td").text().toUpperCase();
					}
					else if($("#fieldSearchSelect").val() == 4)
					{
						searching = row.find("td:first + td + td + td").text().toUpperCase();
					}
					else if($("#fieldSearchSelect").val() == 5)
					{
						searching = row.find("td:first + td + td +td +td").text().toUpperCase();
					}
					else if($("#fieldSearchSelect").val() == 6)
					{
						searching = row.find("td:first + td + td + td +td +td").text().toUpperCase();
					}
					else if($("#fieldSearchSelect").val() == 7)
					{
						searching = row.find("td:first + td + td + td +td +td + td").text().toUpperCase();
					}
					else if($("#fieldSearchSelect").val() == 8)
					{
						searching = row.find("td:first + td + td + td +td +td +td +td").text().toUpperCase();
					}
					else if($("#fieldSearchSelect").val() == 9)
					{
						searching = row.find("td:first + td + td + td +td +td +td+ td +td").text().toUpperCase();
					}
					else {
						searching = row.find("td:first + td + td + td +td +td +td + td + td + td ").text().toUpperCase();
					}
                    if (searching.indexOf(filter) != -1) {               
                        row.show();
                    } else {
                        row.hide();
                    }
                }
            });
        });
    
        $("#databaseSearch").on('click',function() {
            var search = $("#databaseSearchFilter").val().replace(/[|&;$%@"<>()+,^  ]/g, "");
            if (search) {
                $(location).attr('href', '/Sessions/'+$("#databaseSearchSelect").val()+'/'+search);
            } else {
                $(location).attr('href', '/Sessions');
            }
        });
       
        if ($(location).attr('pathname') !== '/Sessions') {
           $('#databaseFilterNotice').text("("+$(location).attr('pathname')+")");
        }
    });
</script>
</body>
</html>